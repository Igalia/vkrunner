[vertex shader]
#version 450

layout(location = 0) out float[4] thing;
layout(location = 0) in vec4 position;

void
main()
{
        thing = float[4](0.25, 0.5, 0.75, 1.0);
        gl_Position = position;
}

[fragment shader]
#version 450

layout(location = 0) in float[4] thing;
layout(location = 0) out vec4 color;

void
main()
{
        color = vec4(thing[0], thing[1], thing[2], thing[3]);
}

[test]
draw rect -1 -1 2 2
probe all rgba 0.25 0.5 0.75 1.0
