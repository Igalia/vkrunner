[vertex shader passthrough]

[fragment shader]
#version 430

layout (location = 0) out vec4 color_out;
layout (binding = 5) uniform block {
  layout(row_major) mat3x4 m;
};

void main()
{
   color_out = m[0] + m[1] + m[2];
}


