[vertex shader]
#version 430

layout(location = 0) in vec4 pos;

void
main()
{
        gl_Position = pos;
}

[fragment shader]
#version 430

layout(std140, push_constant) uniform block {
        uniform vec4 in_color;
        uniform float multiplier;
};

layout(location = 0) out vec4 out_color;

void
main()
{
        out_color = in_color * multiplier;
}

